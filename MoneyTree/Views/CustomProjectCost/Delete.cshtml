@model MoneyTree.Models.CustomProjectCost

@{
    ViewData["Title"] = "Delete";
}

<div class="page_title_container container-fluid">
    <h1 class="page_title">Delete Cost From Project  <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.Project.Id">
    <i class="fas fa-sm fa-arrow-alt-circle-left"></i></a></h1>
</div>
<card class="card text-center mb-4" style="padding: 5px; width: 40%">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class = "col-sm">
                @Html.DisplayNameFor(model => model.ItemName):
            </dt>
            <dd class = "col-sm">
                @Html.DisplayFor(model => model.ItemName)
            </dd class>
         </dl>
        <dl class="row">
            <dt class = "col-sm">
                @Html.DisplayNameFor(model => model.Project):
            </dt>
            <dd class = "col-sm">
                @Html.DisplayFor(model => model.Project.ProjectName)
            </dd class>
         </dl>
        <dl class="row">
            <dt class = "col-sm">
                @Html.DisplayNameFor(model => model.DateUsed):
            </dt>
            <dd class = "col-sm">
                @Html.DisplayFor(model => model.DateUsed)
            </dd>
         </dl>
        <dl class="row">
            <dt class = "col-sm">
                @Html.DisplayNameFor(model => model.Quantity):
            </dt>
            <dd class = "col-sm">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-dark" />
    </form>
</card>