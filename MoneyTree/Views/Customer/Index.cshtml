@model MoneyTree.Models.ViewModels.CustomerIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model.GroupedCustomers) {

    <h3 class="category">@Html.DisplayFor(model => item.FirstLetter)</h3>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => item.CustomerList[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.CustomerList[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.CustomerList[0].PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.CustomerList[0].Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in item.CustomerList) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => customer.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => customer.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => customer.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => customer.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@customer.Id">Details</a>
                    </td>
                </tr>
             }
        </tbody>
    </table>
    <hr />
    <br />
}


