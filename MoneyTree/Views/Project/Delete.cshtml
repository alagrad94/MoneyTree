@model MoneyTree.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<div class="page_title_container container-fluid">
    <h1 class="page_title">Delete  <a asp-action="Index"><i class="fas fa-sm fa-arrow-alt-circle-left"></i></a></h1>
</div>

<card class="card text-center mb-4" style="padding: 5px; width: 40%">
<h3 class="text-danger">Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm">
            @Html.DisplayNameFor(model => model.ProjectName):
        </dt>
        <dd class="col-sm">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm">
            @Html.DisplayNameFor(model => model.StartDate):
        </dt>
        <dd class = "col-sm">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
     </dl>
    <dl class="row">
        <dt class = "col-sm">
            @Html.DisplayNameFor(model => model.CompletionDate):
        </dt>
        <dd class = "col-sm">
            @Html.DisplayFor(model => model.CompletionDate)
        </dd>
     </dl>
    <dl class="row">
        <dt class = "col-sm">
            @Html.DisplayNameFor(model => model.AmountCharged):
        </dt>
        <dd class = "col-sm">
            $@Html.DisplayFor(model => model.AmountCharged)
        </dd>
     </dl>
    <dl class="row">
        <dt class = "col-sm">
            @Html.DisplayNameFor(model => model.Customer):
        </dt>
        <dd class = "col-sm">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd class>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-dark" />
    </form>
</card>
