@model MoneyTree.Models.CostItem

@{
    ViewData["Title"] = "Create";
}

<h1>Add A Cost Item,</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasureId" class="control-label">Unit of Measure</label>
                <select asp-for="UnitOfMeasureId" class ="form-control" asp-items="ViewBag.UnitOfMeasureId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CostCategoryId" class="control-label">Cost Category</label>
                <select asp-for="CostCategoryId" class ="form-control" asp-items="ViewBag.CostCategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
