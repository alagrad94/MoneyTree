@model IEnumerable<MoneyTree.Models.CostCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="page_title_container container-fluid">
    <h1 class="page_title">Cost Categories  <a asp-action="Create"><i class="fas fa-plus-circle"></i></a></h1>
</div>
<card class="card text-center mb-4" style="width:30%">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarkupPercent)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @{
                            var percentToDisplay = item.MarkupPercent * (100);
                        }
                        @percentToDisplay.ToString("F2")%
                       
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</card>